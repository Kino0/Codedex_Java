import java.util.Scanner;

// 1. Classe Order (FORA da classe Main, mas no mesmo arquivo)
class Order {
    String orderName;
    String drinkName;
    double price;
    boolean isIced;
    char size;
    boolean toGo;

    // Construtor Completo
    Order(String orderName, String drinkName, double price, boolean isIced, char size, boolean toGo) {  
        this.orderName = orderName;
        this.drinkName = drinkName;
        this.price = price;
        this.isIced = isIced;
        this.size = size;
        this.toGo = toGo;
    }

    public void printOrder() {
        System.out.println("--------------------------\n");
        System.out.println("\n| ~ Coffee Shop Order ~ |\n");
        System.out.println("Order for " + this.orderName + ": " + this.drinkName);
        System.out.println("Size: " + this.size);
        System.out.println("Iced? " + (this.isIced ? "Yes" : "No"));
        System.out.println("To go? " + (this.toGo ? "Yes" : "No"));
        System.out.println("Total: $" + this.price);
        System.out.println("--------------------------\n");
    }
}

// 2. Classe Main (A classe principal do arquivo)
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("| ~ Coffee Shop ~ |");

        System.out.print("Client: ");
        String readerName = scanner.nextLine();

        System.out.print("Drink: ");
        String readerDrink = scanner.nextLine();

        System.out.print("Price: ");
        double readerPrice = scanner.nextDouble();

        // Menu de Tamanho
        System.out.println("Size (1|P) (2|M) (3|G): ");
        int readerSize = scanner.nextInt();
        char size = (readerSize == 1) ? 'P' : (readerSize == 3 ? 'G' : 'M');

        // Menu de Gelo
        System.out.println("Iced (1|Yes) (2|No): ");
        boolean isIced = (scanner.nextInt() == 1);

        // Menu Para Levar
        System.out.println("To Go (1|Yes) (2|No): ");
        boolean toGo = (scanner.nextInt() == 1);

        // AGORA O JAVA VAI ENCONTRAR A CLASSE ORDER
        Order finishedOrder = new Order(readerName, readerDrink, readerPrice, isIced, size, toGo);
        finishedOrder.printOrder();

        scanner.close();
    }
}
